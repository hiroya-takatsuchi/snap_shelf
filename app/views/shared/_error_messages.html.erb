<%# <style>
.alert {
  position: absolute;
  left: 50%;
  transform: translate(-50%);
}
</style>  %>

<% if model.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% model.errors.full_messages.each do |message| %>
        <li><%= message %></li>  
      <% end %>
    </ul>
  </div>
<% end %>