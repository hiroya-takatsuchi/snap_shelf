<%= render 'shared/error_messages', model: @user %>

<div class="container mt-5">
  <div class="row">
    <div class="col-8">
      <h2><i class="fas fa-user-plus"></i> Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :nickname, "Nickname" %>
          <%= f.text_field :nickname, class: "form-control" %> 
        </div>

        <div class="form-group">
          <%= f.label :email, "Email address" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Password" %>
          <%= f.password_field :password, class: "form-control" %>
          <small class="form-text text-muted">英字と数字を含めること</small>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirm Password" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :prefecture_id, "Prefecture", class: "label" %>
          <%= f.collection_select(:prefectures_id, Prefecture.all, :id, :name, prompt: "Select Prefecture", class: "select") %>
        </div>

        <div class="field">
          <%= f.label :area_id, "Area", class: "label" %>
          <%= f.collection_select(:area_id, Area.all, :id, :name, prompt: "Select Area", class: "select") %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class:"button is-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>