<div class="contents row">
  <div class="container">
    <h2><i class="fas fa-user-plus"></i> Sign up</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :nickname, class: "label" %>
        <%= f.text_field :nickname, autofocus: true, maxlength: "6", class: "input" %>
        <p class="help">6 characters maximum</p>
      </div>

      <div class="field">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, class: "input" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, autocomplete: "off", class: "input" %>
        <% if @minimum_password_length %>
          <p class="help"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "label" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "input" %>
      </div>

      <div class="field">
        <%= f.label :prefecture_id, "Prefectures", class: "label" %>
        <%= f.collection_select(:prefectures_id, Prefecture.all, :id, :name, prompt: "Select Prefecture", class: "select") %>
      </div>

      <div class="field">
        <%= f.label :area_id, "Area", class: "label" %>
        <%= f.collection_select(:area_id, Area.all, :id, :name, prompt: "Select Area", class: "select") %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"button is-success" %>
      </div>
    <% end %>
  </div>
</div>