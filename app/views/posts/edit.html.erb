<div class="contents row justify-content-center">
  <div class="container col-md-6">
    <h3 class="text-center text-primary mb-4">投稿する</h3>
    <%= form_with(model: @post, local: true, html: { class: 'needs-validation', novalidate: '' }) do |f| %>
      <%= render 'shared/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.text_field :title, placeholder: "タイトル", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.file_field :image, class: 'form-control-file' %>
      </div>
      <div class="form-group">
        <%= f.collection_select :genre_id, Genre.all, :id, :name, {}, {class: 'custom-select'} %>
      </div>
      <div class="form-group">
        <%= f.collection_select :shelf_number_id, ShelfNumber.all, :id, :name, {}, {class: 'custom-select'} %>
      </div>
      <div class="form-group">
        <%= f.text_area :explanation, placeholder: "説明文", rows: "20", class: 'form-control' %>
      </div>
      <div class="form-group text-center">
        <%= f.submit "SEND", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>