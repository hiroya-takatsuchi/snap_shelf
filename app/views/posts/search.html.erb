<div class="contents row">
  <% @posts.each do |post| %>
    <div class="card mb-3">
    <%= image_tag post.image, class: "card-img-top", alt: post.user.nickname %>

    <div class="card-body">

      <h5 class="card-title"><%= post.user.nickname %></h5>

      <p class="card-text">
        <%= post.explanation %>
      </p>

      <p class="card-text">
        <small class="text-muted">閲覧数: <%= post.views %></small>
      </p>

      <p class="card-text">
        <small class="text-muted">
          「いいね」の数: <%= post.likes.count %>
        </small>
      </p>

      <% if user_signed_in? && post.liked_by?(current_user) %>
        <%= link_to "いいね済", post_likes_path(post.id), class: "btn btn-success" %>
      <% else %>  
        <%= link_to "いいね", post_likes_path(post.id), class: "btn btn-outline-success" %>
      <% end %>

      <%= link_to '詳細', post_path(post), class: 'btn btn-primary' %>
    </div>
  </div>
</div>
  <% end %>  
</div>